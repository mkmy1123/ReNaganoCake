header
  - if admin_signed_in?
    .admin-header
      h3
        = link_to "ながのCAKE", admin_path
      ul.nav.navbar-nav.navbar-right
        li
          = render 'search/form'
        li
          = link_to "商品一覧", admin_items_path
        li
          = link_to "会員一覧", admin_customers_path
        li
          = link_to "注文履歴一覧", admin_orders_path
        li
          = link_to "ジャンル一覧", admin_genres_path
        li
          = link_to "ログアウト", destroy_admin_session_path, method: :delete
  - elsif customer_signed_in?
    .welcome
      i.fas.fa-bullhorn
      | ようこそ、
      strong
        = current_customer.name
      | さん！
    .header-bottom
      ul.nav.nav-pills.nav-justified
        |  <li class= "
        = 'active' if controller.action_name == 'top'
        | ">
        = link_to "HOME", root_path
        |  <li class= "
        = 'active' if controller.controller_name == 'cart_items'
        | ">
        = link_to "CART", cart_items_path
        |  <li class= "
        = 'active' if controller.controller_name == 'items'
        | ">
        = link_to "ALL ITEMS", customer_items_path
        li
          = link_to image_tag('logo2.png'), root_path
        |  <li class= "
        = 'active' if controller.action_name == 'about'
        | ">
        = link_to "ABOUT", about_path
        |  <li class= "
        = 'active' if controller.controller_name == 'customers'
        | ">
        = link_to "MYPAGE", customer_path(current_customer)
        li
          = link_to "LOGOUT", destroy_customer_session_path, method: :delete
  - else
    .header-bottom
      ul.nav.nav-pills.nav-justified
        |  <li class= "
        = 'active' if controller.action_name == 'top'
        | ">
        = link_to "HOME", root_path
        li
          = link_to "CART", new_customer_registration_path
        |  <li class= "
        = 'active' if controller.controller_name == 'items'
        | ">
        = link_to "ALL ITEMS", customer_items_path
        li
          = link_to image_tag('logo2.png'), root_path
        |  <li class= "
        = 'active' if controller.action_name == 'about'
        | ">
        = link_to "ABOUT", about_path
        |  <li class= "
        = 'active' if controller.controller_name == 'sessions'
        | ">
        = link_to "LOGIN", new_customer_session_path
        |  <li class= "
        = 'active' if controller.controller_name == 'registrations'
        | ">
        = link_to "新規登録", new_customer_registration_path
