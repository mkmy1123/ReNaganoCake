	<div class="items">
	<% index_items.each do |i| %>
		<%= link_to customer_item_path(i) do %>
		<div class="itembox">
			<%= attachment_image_tag i, :item_image %>
			<dl>
				<dt>商品名</dt>
					<dd><%= i.name %></dd>
				<dt>価格</dt>
					<dd>¥ <%= include_tax(i.price) %> </dd>
			</dl>
		</div>
		<% end %>
	<% end %>
	</div>